# Django settings
DJANGO_SECRET_KEY=your-super-secret-django-key-change-this-in-production
DEBUG=1

# Signal API Configuration
SIGNAL_API_URL=http://192.168.1.100:9000
SIGNAL_API_KEY=your-signal-api-key-here

# Your Signal phone number (for identifying sent messages)
MY_SIGNAL_NUMBER=+1234567890

# Django allowed hosts (comma-separated, no spaces)
ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com,192.168.1.100,localhost,127.0.0.1

# CORS allowed origins (comma-separated, no spaces, include protocol)
# Add both HTTP and HTTPS if using Cloudflare
CORS_ALLOWED_ORIGINS=https://yourdomain.com,http://192.168.1.100:3000,http://localhost:3000

# React app API URL (full URL with protocol)
# IMPORTANT: This must be the Cloudflare backend domain (work-signal-api.yourdomain.com)
# NOT the internal IP address, because the browser needs to access it
REACT_APP_API_URL=https://api.yourdomain.com
